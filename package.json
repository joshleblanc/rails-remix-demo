{
  "name": "rails-remix-demo",
  "private": true,
  "description": "",
  "license": "MIT",
  "sideEffects": false,
  "scripts": {
    "dev": "cross-env NODE_ENV=development run-p dev:*",
    "dev:vite": "vite dev",
    "dev:rails": "bin/rails s -p 3000",
    "lint": "run-s lint:*",
    "lint:types": "tsc",
    "lint:js": "eslint . --ext .ts,.tsx"
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 100
  },
  "eslintConfig": {
    "settings": {
      "jest": {
        "version": 27
      }
    },
    "extends": [
      "@remix-run/eslint-config",
      "prettier"
    ],
    "rules": {
      "@typescript-eslint/no-redeclare": "off"
    },
    "overrides": [
      {
        "files": [
          "tailwind.config.js"
        ],
        "env": {
          "node": true
        }
      }
    ]
  },
  "dependencies": {
    "remix-router-turbo": "^0.2.0"
  },
  "devDependencies": {
    "@remix-run/eslint-config": "^1.6.0",
    "@tailwindcss/forms": "^0.5.2",
    "autoprefixer": "^10.4.7",
    "cross-env": "^7.0.3",
    "del-cli": "^4.0.1",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.14",
    "prettier": "^2.7.1",
    "tailwindcss": "^3.1.3",
    "typescript": "^4.7.3",
    "vite": "^2.9.12",
    "vite-plugin-ruby": "^3.0.9"
  },
  "engines": {
    "node": ">=16"
  }
}
